@model MergeTool.Models.DocumentSection

@{
    ViewData["Title"] = "View Section";
}

<h2 class="mb-3">Section: @Model.Title</h2>

<p><strong>Section Index:</strong> @Model.SectionIndex</p>
<p><strong>Last Edited:</strong> @(Model.LastEditedAt.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</p>

<hr />

<!-- 📄 Render section content as-is -->
<div id="section-content">
    @Html.Raw(Model.Content)
</div>

<a asp-action="Details" asp-route-id="@Model.DocumentId" class="btn btn-secondary mt-3">Back to Document</a>

<!-- ✅ Full-width Word-like formatting for tables -->
<style>
    #section-content table {
        width: 100% !important; /* Full width like Word */
        margin: 0 auto !important; /* Center the table */
        border-collapse: collapse;
        table-layout: auto; /* Distribute column widths naturally */
    }

    #section-content th,
    #section-content td {
        border: 1px solid #000;
        padding: 8px;
        text-align: left;
        vertical-align: top;
    }

    #section-content th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    #section-content {
        overflow-x: auto; /* For mobile scroll */
    }
</style>
